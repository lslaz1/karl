<!-- Alphabet Toolbar -->
    <div metal:define-macro="letter_box" class="kalphabetlisting">
      <div class="container-fluid">
        <div class="row">

          <ul class="list-inline hidden-xs">
            <span tal:omit-tag="" tal:repeat="letter letters">
            <li tal:condition="letter['is_current']"><strong
             class="${letter['css_class']}">${letter['name']}</strong></li>
            <li tal:condition="letter['href'] and not letter['is_current']"><a
               class="${letter['css_class']}" href="${letter['href']}"
              >${letter['name']}</a></li>
            <li tal:condition="not letter['href'] and not letter['is_current']"><span
               class="${letter['css_class']}">${letter['name']}</span></li>
            </span>
          </ul>
          
            <div class="input-group visible-xs">
              <select class="form-control" id="alpha-filter">
                <span tal:omit-tag="" tal:repeat="letter letters">
                  <option tal:condition="letter['is_current']">
                    ${letter['name']}
                  </option>
                  <option class="B" tal:condition="letter['href'] and not letter['is_current']">
                    ${letter['name']}
                  </option>
                  <option class="C" disabled tal:condition="not letter['href'] and not letter['is_current']">
                    ${letter['name']}
                  </option>
                </span>
               </select> 
              <span class="input-group-btn"> 
                <button class="btn btn-default" id="filter-btn">Filter</button>
              </span>
            </div> <!-- /.input-group -->
          
          <script>
          
            $(document).ready(function() { 
              $("#filter-btn").click(function() {
                var x = {};

                <span tal:omit-tag="" tal:repeat="letter letters">
                  x["<span tal:replace="letter['name']"/>"] = "<span tal:replace="letter['href']"/>" 
                </span>

                if (x[$("#alpha-filter").val()]) {
                  window.location = x[$("#alpha-filter").val()];
                } else {
                    console.log("No results for " + letter['name']);
                }
              });  
            });

          </script>

        </div>
      </div>
    </div>

