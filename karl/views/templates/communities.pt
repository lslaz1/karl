<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="api.generic_layout">

<head>
 <metal:slot metal:fill-slot="extra-headers">
  <style type="text/css">
   .ui-tabs .ui-tabs-hide {
     display: none;
   }
   .communityEntry {
        overflow-y: auto;
   }
   .community-tabs {
        float:right;
        width: 25em;
        margin-left: 0.5em;
        font-size: x-small;
   }
  </style>
 </metal:slot>
</head>

<body>
  <div metal:fill-slot="content">

    <div metal:use-macro="api.snippets.macros['status_message']"/>

    <h1>${api.page_title}</h1>

    <div metal:use-macro="api.snippets.macros['actions_box']"/>

    <div id="communities-content-wrapper">

    <div metal:use-macro="api.snippets.macros['communities-listing-head']"/>

    <h3 tal:repeat="qualifier qualifiers">${qualifier}</h3>

    <div tal:condition="error" tal:content="error" />

    <metal:script
        metal:use-macro="api.snippets.macros['gridstyle_batching_script']" />
    <table class="table table-striped" tal:condition="batch_info['batching_required']" width="100%">
      <tr class="ui-grid-footer">
        <th class="ui-widget-header">
          <div metal:use-macro="api.snippets.macros['gridstyle_batching']">
          </div>
        </th>
      </tr>
    </table>

    <div class="communityEntry">

      <div class="list-group col col-lg-12" id="communities-list">
        <a tal:repeat="community communities" href="${community.url}" class="list-group-item">
          <h4 class="list-group-item-heading">${community.title}</h4>
          <span tal:condition="not api.has_staff_acl(community.context)"
          metal:use-macro="api.snippets.macros['privacy_badge']"/>
          <span tal:condition="community.moderator"
            metal:use-macro="api.snippets.macros['moderator_badge']"/>
          <p class="list-group-item-text">${community.description}</p><br/>
          <span>${community.number_of_members} Member(s)</span>
          <span> | </span>
          <span>Last Activity: <span class="globalize-short-date">${community.last_activity_date}</span></span>
          <span class="glyphicon glyphicon-chevron-right pull-right">
        </a>
      </div>

    </div>

    <table class="table table-striped" tal:condition="batch_info['batching_required']" width="100%">
      <tr class="ui-grid-footer">
        <th class="ui-widget-header">
          <div metal:use-macro="api.snippets.macros['gridstyle_batching']">
          </div>
        </th>
      </tr>
    </table>

  </div>
  </div>

</body>
</html>
