<html xmlns="http://www.w3.org/1999/xhtml"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     metal:use-macro="api.generic_layout">

  <div metal:fill-slot="portlets">
    <div metal:use-macro="menu"/>
  </div>

  <div metal:fill-slot="content">
    <div metal:use-macro="api.snippets.macros['status_message']"/>
    <div metal:use-macro="api.snippets.macros['error_message']"/>

    <div class="admin_page_body">
      <h1 class="kscreentitle">Admin Section: Rename or Merge Users</h1>

      <div class="koverview_body">
        <div class=col-lg-3>
          <form method="POST" name="rename_or_merge">
            <div class="form-group">
              <label><strong>Old Username</strong></label><br/>
              <input class="form-control input-sm" type="text" name="old_username" />
            </div>
            <div class="form-group">
              <label><strong>New Username</strong></label><br/>
              <input class="form-control input-sm" type="text" name="new_username" />
            </div>
            <label><input type="checkbox" name="merge" value="1"/>
            Merge user accounts.</label><br/>
            <br/>
            <input class="btn btn-default btn-sm" type="submit" value="Rename user"/>
          </form>
        </div>
      </div>
    </div>

  </div>

</html>
